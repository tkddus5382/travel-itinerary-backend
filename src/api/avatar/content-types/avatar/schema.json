    "description": {
      "type": "text"
    },
    "unlockType": {
      "type": "enumeration",
      "enum": ["default", "mission", "event", "special"],
      "default": "default",
      "required": true
    },
    "unlockCondition": {
      "type": "json",
      "required": false
    },
    "isActive": {
      "type": "boolean",
      "default": true
